package game.objects {		public class TargetTileMovement {		public var x:uint;		public var y:uint;		public var dirX:int;		public var dirY:int;		public var remainingPixels:uint;				/**		 * 		 * @param x The x tile coordinate of the tile to move to.		 * @param y The y tile coordinate of the tile to move to.		 * @param dirX The x facing direction of the move.		 * @param dirY The y facing direction of the move.		 * 		 */				public function TargetTileMovement(x:uint = 0, y:uint = 0, dirX:int = 0, dirY:int = 0) {			// constructor code			this.x = x;			this.y = y;			this.dirX = dirX;			this.dirY = dirY;		}	}	}