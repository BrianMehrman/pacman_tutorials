package game.objects {		import game.controls.InputHandler;	import game.controls.KeyEvent;		import flash.display.MovieClip;	import flash.events.Event;		/**	 *	 * Adds heros to the stage.	 *	 */		public class HeroHandler {		protected var _heroes:Array = new Array();		protected var _tilesContainer:MovieClip;				public function HeroHandler(tilesContainer:MovieClip) {			// constructor code			this._tilesContainer = tilesContainer;		}				public function addHero(hero:Hero) {			this._heroes.push(hero);			this._tilesContainer.addChild(hero);		}				public function removeHeroes():void 		{			var h:Hero;			for(var i:int=0;i<this._heroes.length;i++){				h = this._heroes[i];				if(this._tilesContainer.getChildIndex(h)) {					this._tilesContainer.removeChild(h);					h.destroy();				}			}		}	}	}