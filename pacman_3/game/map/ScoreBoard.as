package game.map {	import flash.display.MovieClip;	import game.objects.Hero;	import flash.text.TextField;	import flash.events.Event;		public class ScoreBoard extends MovieClip {					public var localHero:Hero;		private var _score_text:TextField;		private var _lives_text:TextField;				public function ScoreBoard() {			// constructor code			this._score_text = score_text;			this._lives_text = lives_text;		}		public function init(hero:Hero):void {			this.localHero = hero;			this.stage.addEventListener(Event.ENTER_FRAME, checkLoop);		}				public function checkLoop(e:Event) {			if( this.localHero != undefined){				this.score_text.text = "Score: " + this.localHero.score.toString();				this.lives_text.text = "Lives: " + this.localHero.lives.toString();			}		}	}	}