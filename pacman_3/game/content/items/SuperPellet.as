package game.content.items {	import game.objects.Item;	import game.Game;	import game.objects.GameObject;	import game.GameEvent;	import flash.events.TimerEvent;	import flash.utils.Timer;		public class SuperPellet extends Item {		public var collector:GameObject;		public function SuperPellet(xTile:uint, yTile:uint, game:Game):void {			// constructor code			super(24, 24, xTile, yTile, game);		}				// another game object has picked me up. apply points to the game objects score		override public function pickedUp(collector:GameObject):void {			collector.score += this.points;			this._game.currentState = GameEvent.FEAR_STATE;			var t:Timer = new Timer(5000);			t.addEventListener(TimerEvent.TIMER, itemTimer);			this.collector = collector			collector.stage.dispatchEvent(new GameEvent(GameEvent.FEAR_STATE));		}				public function itemTimer(e:TimerEvent):void {			e.currentTarget.removeEventListener(TimerEvent.TIMER, itemTimer);			this._game.currentState = GameEvent.CHASE_STATE;			this.collector.stage.dispatchEvent(new GameEvent(GameEvent.CHASE_STATE));		}	}	}