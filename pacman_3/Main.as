package {		import game.content.heroes.Pacman;	import game.content.enemies.Blinky;	import game.content.enemies.Pinky;	import game.Game;	import game.GameClient;	import game.GameEvent;	import flash.display.MovieClip;	import flash.events.MouseEvent;	public class Main extends MovieClip {				protected const TILESETS_URL:String = "game/content/tilesets3.json";		protected const MAPS_URL:String = "game/content/maps3.json";		protected const TILE_WIDTH:int = 32;		protected const TILE_HEIGHT:int = 32;		protected const GRAVITY:Number = 1;		protected const TILT_RATIO:Number = 0.9;		protected const STRAFING:Boolean = true;		protected const MOVEMENT_TYPE:String = Game.NORMAL;				protected var _gameClient:GameClient;				public function Main() {			// constructor code			mainMenu();		}				public function mainMenu():void {			// load main menu			clearStage();			var start_screen:StartScreen = new StartScreen();			var start_button:StartButton = start_screen.start_button;						start_button.addEventListener(MouseEvent.CLICK, startGame);			this.addChild(start_screen);		}				public function scoreScreen(event:GameEvent):void {			// clear screen						// add scores						// add options						// play animations					}				public function startGame(event:MouseEvent):void {			clearStage();			this._gameClient = new GameClient(TILESETS_URL, MAPS_URL, TILE_WIDTH, TILE_HEIGHT, GRAVITY, TILT_RATIO, STRAFING, MOVEMENT_TYPE);			this.addChild(this._gameClient);			this.stage.addEventListener(GameEvent.GAME_LOADED, this.initGame);			this.stage.addEventListener(GameEvent.GAME_ENDED, this.restartGame);		}				public function restartGame(event:GameEvent):void {			mainMenu();		}				public function initGame(event:GameEvent):void {			this._gameClient.loadMap(1);			//this._gameClient.addHero(Pacman, 1, 1, 1, 0, true);			//this._gameClient.addEnemy(Blinky,10,10,0,-1,false);			this.stage.dispatchEvent(new GameEvent(GameEvent.GAME_STARTED));		}				public function get gameClient():GameClient {			return this._gameClient;		}				public function clearStage():void {			for(var i:int=this.numChildren-1;i>-1;i--){				this.removeChildAt(i);			}		}	}}