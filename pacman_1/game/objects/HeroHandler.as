package game.objects {		import game.controls.InputHandler;	import game.controls.KeyEvent;		import flash.display.MovieClip;	import flash.events.Event;		/**	 *	 * Adds heros to the stage.	 *	 */		public class HeroHandler {		protected var _heroes:Array = new Array();		protected var _tilesContainer:MovieClip;				public function HeroHandler(tilesContainer:MovieClip) {			// constructor code			this._tilesContainer = tilesContainer;		}				public function addHero(hero:Hero) {			if (this._heroes.indexOf(hero) < 0){				this._heroes.push(hero);			}			this._tilesContainer.addChild(hero);		}	}}