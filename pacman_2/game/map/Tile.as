package game.map {	import flash.display.MovieClip;	import game.Game;		/***	 *	 * Base class for a Tile. Contains metadata about the tile.	 *	 */	 	public class Tile extends MovieClip {		public var solid:Boolean;		public var slope:int;		public var top:Boolean;		public var game:Game;				public function Tile(solid:Boolean, slope:int, top:Boolean):void {			// constructor code			this.solid = solid;			this.slope = slope;			this.top = top;		}	}	}