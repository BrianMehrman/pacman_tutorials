package game.objects {	import flash.display.MovieClip;		public class EnemyHandler {				protected var _enemies:Array = new Array();		protected var _tilesContainer:MovieClip;				public function EnemyHandler(tilesContainer:MovieClip) {			// constructor code			this._tilesContainer = tilesContainer;		}		public function addEnemy(enemy:Enemy):void {			this._enemies.push(enemy);			this._tilesContainer.addChild(enemy);		}				public function enemies():Array 		{			return this._enemies;		}				public function removeEnemies():void		{			var e:Enemy;			for (var i:int=0;i < this._enemies.length;i++){				e = this._enemies[i];				if(this._tilesContainer.getChildIndex(e)) {					this._tilesContainer.removeChild(e);					e.destroy();				}			}		}	}	}